<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/video_container">

    <FrameLayout
        android:id="@+id/rotate_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="494px"
            android:layout_marginTop="684px"
            android:src="@drawable/rotate_title" />
        <ImageView
            android:id="@+id/rotate_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="476px"
            android:layout_marginTop="846px"
            android:src="@drawable/rotate_device_img"/>
    </FrameLayout>

    <com.samsung.retailexperience.retailhero.view.VideoTextureView
        android:id="@+id/video_view"
        android:layout_width="2560px"
        android:layout_height="1440px"
        android:layout_marginTop="2560px"
        android:transformPivotX="0px"
        android:transformPivotY="0px"
        android:rotation="270"
        app:looped="false"
        app:autoPlay="false"
        app:isShowVideoFrame="true"
        app:scaleToVideoSize="true"
        android:visibility="gone"/>

</FrameLayout>