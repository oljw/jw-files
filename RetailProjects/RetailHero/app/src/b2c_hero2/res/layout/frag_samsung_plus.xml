<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/video_container">

    <com.samsung.retailexperience.retailhero.view.VideoTextureView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:looped="false"
        app:autoPlay="false"
        app:isShowVideoFrame="true"
        app:scaleToVideoSize="true"/>

    <FrameLayout
        android:id="@+id/plus_tap_scan_now_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/super_overlay">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="286px"
            android:layout_marginTop="816px"
            android:src="@drawable/plus_scan_now"/>
        <View
            android:id="@+id/plus_tap_scan_now_icon_clickable"
            android:layout_width="840px"
            android:layout_height="842px"
            android:layout_marginLeft="300px"
            android:layout_marginTop="1170px"
            android:clickable="true" />
    </FrameLayout>

</FrameLayout>