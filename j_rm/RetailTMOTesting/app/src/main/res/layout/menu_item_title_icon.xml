<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height" >

    <com.samsung.retailexperience.retailtmo.ui.view.CustomFontTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:customFont="fonts/SamsungSharpSans-Bold.ttf"
        android:textSize="@dimen/menu_item_title_font_size"
        android:textColor="@color/black"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/title"
        android:layout_marginLeft="@dimen/menu_item_icon_margin_left"
        android:layout_centerVertical="true"/>

</RelativeLayout>