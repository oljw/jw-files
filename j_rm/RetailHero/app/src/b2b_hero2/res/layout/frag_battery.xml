<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/video_container">

    <com.samsung.retailexperience.retailhero.view.VideoTextureView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:looped="false"
        app:autoPlay="false"
        app:isShowVideoFrame="true"
        app:scaleToVideoSize="true"/>

    <ImageView
        android:id="@+id/super_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/battery_super"/>

    <FrameLayout
        android:id="@+id/battery_tap_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/super_overlay" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="787px"
            android:layout_marginTop="296px"
            android:src="@drawable/battery_tap_icon" />
        <View
            android:id="@+id/battery_tap_icon"
            android:layout_width="250px"
            android:layout_height="349px"
            android:layout_marginLeft="878px"
            android:layout_marginTop="285px"
            android:clickable="true" />
    </FrameLayout>
</FrameLayout>