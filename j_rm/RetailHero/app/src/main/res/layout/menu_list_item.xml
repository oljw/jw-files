<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_item_height"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/frag_menu_layout_padding_left"
    android:paddingRight="@dimen/frag_menu_layout_padding_right">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.samsung.retailexperience.retailhero.view.CustomFontTextView
            android:id="@+id/menuItemTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:customFont="fonts/SamsungSharpSans-Bold.ttf"
            android:textSize="@dimen/menu_item_title_font_size"
            android:textIsSelectable="false"
            android:textColor="@color/text_color_black"
            android:text="Title"
            android:layout_weight="8"
            android:gravity="center_vertical|left"/>

        <ImageView
            android:id="@+id/menuItemIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|end"
            android:src="@drawable/chevron_blue"/>
    </LinearLayout>

    <com.samsung.retailexperience.retailhero.view.CustomFontTextView
        android:id="@+id/menuItemSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/menu_item_subtitle_margin_top"
        app:customFont="fonts/SamsungOne-400_v1.0.ttf"
        android:textSize="@dimen/menu_item_subtitle_font_size"
        android:textIsSelectable="false"
        android:textColor="@color/text_color_black"
        android:text="Subject"/>
</LinearLayout>