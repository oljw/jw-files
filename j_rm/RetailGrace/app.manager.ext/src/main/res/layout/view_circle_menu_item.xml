<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.tecace.retail.appmanager.ui.view.CustomFontTextView
        android:id="@+id/upper_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:customFont="fonts/SamsungSharpSans-Bold.ttf"
        android:textSize="@dimen/view_circle_menu_item_title_font_size"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/view_circle_menu_item_upper_title_margin_bottom"/>

    <ImageButton
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"/>

    <com.tecace.retail.appmanager.ui.view.CustomFontTextView
        android:id="@+id/lower_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:customFont="fonts/SamsungSharpSans-Bold.ttf"
        android:textSize="@dimen/view_circle_menu_item_title_font_size"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/view_circle_menu_item_lower_title_margin_top"/>

</LinearLayout>