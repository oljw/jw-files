<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tecace.retail.appmanager.ui.view.CustomListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="@dimen/fragment_list_fab_size"
        android:layout_height="@dimen/fragment_list_fab_size"
        android:layout_gravity="top|right"
        android:layout_marginTop="@dimen/fragment_list_fab_margin_top"
        android:layout_marginRight="@dimen/fragment_list_fab_margin_right"
        app:backgroundTint="@color/white"
        android:src="@drawable/close"
        app:layout_anchor="@id/list"
        app:layout_anchorGravity="top|right|end" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_arrow_down"
        android:layout_width="@dimen/fragment_list_fab_size"
        android:layout_height="@dimen/fragment_list_fab_size"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/fragment_list_fab_arrow_down_margin_bottom"
        android:layout_marginRight="@dimen/fragment_list_fab_margin_right"
        app:backgroundTint="@color/samsung_blue"
        android:src="@drawable/chevron_down_white"
        app:layout_anchor="@id/list"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>