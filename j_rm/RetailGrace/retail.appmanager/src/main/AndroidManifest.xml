<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tecace.retail.appmanager">

    <!--Camera Permissions-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BODY_SENSORS"/>
    <uses-feature android:name="android.hardware.camera2.full" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name=".ui.activity.MissingContentActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleInstance"
            android:excludeFromRecents="true"
            android:taskAffinity="" >
            <intent-filter>
                <action android:name="android.intent.action.retail.appmanager.ui.activity.MISSINGCONTENTACTIVITY"/>
            </intent-filter>
        </activity>

        <service android:name=".service.RetailAppService" android:exported="true" android:process=":remote">
            <intent-filter>
                <action android:name="com.tecace.retail.appmanager.iRetailAppService" />
                <action android:name="com.tecace.retail.appmanager.RETAIL_APP_SERVICE" />
            </intent-filter>
        </service>

        <service
            android:label="ForegroundDetectingService"
            android:name=".service.ForegroundDetectingService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/foregrounddetectingservice"/>
        </service>

        <receiver android:name=".receiver.ForegroundDetectingReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":remote" >
            <intent-filter>
                <action android:name="com.tecace.retail.appmanager.receiver.action.FOREGROUND_DETECTED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receiver.ReBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".receiver.SyncContentReceiver">
            <intent-filter>
                <action android:name="com.samsung.retailcloud.content.sync.STARTED"/>
                <action android:name="com.samsung.retailcloud.content.sync.ABORTED"/>
                <action android:name="com.samsung.retailcloud.content.sync.COMPLETED"/>
                <action android:name="com.samsung.retailcloud.content.UPDATE"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
