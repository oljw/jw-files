<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/video_container">

    <com.samsung.retailexperience.retailhero.view.VideoTextureView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:looped="false"
        app:autoPlay="false"
        app:isShowVideoFrame="true"
        app:scaleToVideoSize="true"/>


    <!--Camera Layout-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/camera_layout"
            android:background="#000000">

            <RelativeLayout
                android:id="@+id/camera_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/top_fragment"
                android:layout_above="@+id/bottom_fragment"
                android:background="#000000">

                <ImageView
                    android:id="@+id/focus_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/tap_focus_icon"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:alpha="0.4"
                    android:visibility="invisible"
                    android:adjustViewBounds="true" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/stop_button"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="fitCenter"
                android:src="@drawable/stop_button"
                android:background="@null"
                android:alpha="0.6"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="26dp" />

            <fragment
                android:id="@+id/top_fragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/camera_top_menubar_height"
                android:layout_alignParentTop="true"
                android:name="com.samsung.retailexperience.retailhero.ui.fragment.camera_app.TopMenuBarFragment" />

            <fragment
                android:id="@+id/bottom_fragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/camera_bottom_menubar_height"
                android:layout_alignParentBottom="true"
                android:name="com.samsung.retailexperience.retailhero.ui.fragment.camera_app.BottomMenuBarFragment" />
        </RelativeLayout>

        <!--Interaction Image-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/capture_super"
            android:src="@drawable/capture_super"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>




    <!-- Gallery Layout -->
    <RelativeLayout
        android:id="@+id/gallery_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone">

        <com.samsung.retailexperience.retailhero.view.GalleryZoomView
            android:id="@+id/gallery_view_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test_picture3" />

        <fragment
            android:id="@+id/top_gallery_fragment"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:name="com.samsung.retailexperience.retailhero.ui.fragment.camera_app.TopGalleryBarFragment" />

        <fragment
            android:id="@+id/bottom_gallery_fragment"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:name="com.samsung.retailexperience.retailhero.ui.fragment.camera_app.BottomGalleryBarFragment" />
    </RelativeLayout>

</FrameLayout>