<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/fragment_menu_padding_left"
    android:paddingRight="@dimen/fragment_menu_padding_right"
    android:paddingTop="@dimen/fragment_menu_padding_top" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fragment_menu_title_font_size"
            android:text="Title"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/fragment_menu_padding_top_without_drawer"/>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:layout_marginTop="@dimen/fragment_menu_padding_top" >
        </ListView>
    </LinearLayout>

</RelativeLayout>