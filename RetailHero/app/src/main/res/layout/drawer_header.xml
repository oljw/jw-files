<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/drawer_header_padding_top" >

    <com.samsung.retailexperience.retailhero.view.CustomFontTextView
        android:id="@+id/drawer_item_title"
        android:layout_width="wrap_content"
        android:layout_height="140px"
        app:customFont="fonts/SamsungSharpSans-Bold.ttf"
        android:text="@string/select_a_category"
        android:textSize="@dimen/drawer_header_font_size"
        android:textColor="@color/drawer_header_color"
        android:layout_alignParentStart="true"/>

</RelativeLayout>