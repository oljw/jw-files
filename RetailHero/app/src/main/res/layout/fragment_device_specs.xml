<?xml version="1.0" encoding="utf-8"?>
<com.samsung.retailexperience.retailhero.view.SlideFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="100px"
    android:background="@android:color/white"
    android:clickable="true">

    <FrameLayout
        android:id="@+id/close_button"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_marginTop="65px"
        android:layout_marginRight="65px"
        android:paddingRight="35px"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35px"
            android:layout_gravity="right"
            android:src="@drawable/close"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/device_specs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="226px"
        android:src="@drawable/device_specs" />

    <LinearLayout
        android:id="@+id/compare_device_layout"
        android:layout_width="match_parent"
        android:layout_height="136px"
        android:layout_below="@+id/device_specs"
        android:layout_marginTop="@dimen/device_specs_subtitle_margin_top"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/compare_devices" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/device_specs_subtitle_chevron_margin_left"
            android:src="@drawable/chevron_blue"/>
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="100px"
        android:layout_below="@+id/compare_device_layout"
        android:layout_marginTop="@dimen/device_spec_item_view_margin_top"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent" />

</com.samsung.retailexperience.retailhero.view.SlideFrameLayout>