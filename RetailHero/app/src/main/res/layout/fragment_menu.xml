<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_menu_with_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_button_container_margin_top"
            android:layout_marginLeft="@dimen/menu_button_container_margin_left">
            <!--android:layout_marginTop="@dimen/menu_button_container_margin_top" >-->
            <!--android:paddingLeft="@dimen/frag_menu_layout_padding_left"-->
            <!--android:paddingRight="@dimen/frag_menu_layout_padding_right">-->

            <FrameLayout
                android:id="@+id/hamburger_menu_container"
                android:layout_width="@dimen/menu_button_container_width"
                android:layout_height="@dimen/menu_button_container_height"
                android:paddingTop="@dimen/menu_button_padding_top"
                android:paddingLeft="@dimen/menu_button_padding_left" >
                <ImageView
                    android:id="@+id/drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_hamburger" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/dots_layout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/frag_menu_title_margin_top"
            android:orientation="vertical"
            android:paddingLeft="@dimen/frag_menu_layout_padding_left"
            android:paddingRight="@dimen/frag_menu_layout_padding_right">

            <com.samsung.retailexperience.retailhero.view.CustomFontTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:customFont="fonts/SamsungSharpSans-Bold.ttf"
                android:textSize="@dimen/menu_title_font_size"
                android:textColor="@color/text_color_black" />

            <com.samsung.retailexperience.retailhero.view.CustomFontTextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/frag_menu_subtitle_margin_top"
                app:customFont="fonts/SamsungOne-400_v1.0.ttf"
                android:textSize="@dimen/menu_subtitle_font_size"
                android:textColor="@color/text_color_black"/>
        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/frag_menu_list_margin_top"
            android:overScrollMode="never"
            android:divider="@drawable/list_divider"
            android:dividerHeight="1dp">
        </ListView>
    </LinearLayout>

    <include layout="@layout/menu_video_button_layout" />

    <ImageView
        android:id="@+id/device_spec_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/device_spec_tab" />
</RelativeLayout>