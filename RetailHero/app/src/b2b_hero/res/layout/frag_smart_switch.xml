<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/video_container">

    <com.samsung.retailexperience.retailhero.view.VideoTextureView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:looped="false"
        app:autoPlay="false"
        app:isShowVideoFrame="true"
        app:scaleToVideoSize="true"/>
    <!-- TODO Overlay IMAGE is OFF!!!!!!!! Must fix it-->
    <FrameLayout
        android:id="@+id/gear_smart_switch_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/super_overlay"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="287px"
            android:layout_marginTop="349px"
            android:src="@drawable/gear_tap_smart_switch"
            />
        <View
            android:id="@+id/gear_smart_switch_icon_clickable"
            android:layout_width="216px"
            android:layout_height="216px"
            android:layout_marginLeft="441px"
            android:layout_marginTop="789px"
            android:clickable="true"
            android:background="@color/super_overlay_clickable_icon_area_bg"
            />
    </FrameLayout>
</FrameLayout>