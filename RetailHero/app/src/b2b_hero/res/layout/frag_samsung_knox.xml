<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/video_container">

    <com.samsung.retailexperience.retailhero.view.VideoTextureView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:looped="false"
        app:autoPlay="false"
        app:isShowVideoFrame="true"
        app:scaleToVideoSize="true"/>

    <FrameLayout
        android:id="@+id/knox_icon_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/super_overlay" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="336px"
            android:layout_marginTop="1072px"
            android:src="@drawable/knox_tap_on_icon" />
        <View
            android:id="@+id/knox_icon_clickable"
            android:layout_width="216px"
            android:layout_height="300px"
            android:layout_marginLeft="440px"
            android:layout_marginTop="1532px"
            android:clickable="true"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/knox_super_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="479px"/>

</FrameLayout>