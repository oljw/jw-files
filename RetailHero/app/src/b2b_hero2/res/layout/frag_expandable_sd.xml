<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/video_container">

    <com.samsung.retailexperience.retailhero.view.VideoTextureView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:looped="false"
        app:autoPlay="false"
        app:isShowVideoFrame="true"
        app:scaleToVideoSize="true"/>

    <!-- top margin 852, left margin 0 -->
    <FrameLayout
        android:id="@+id/sd_tap_to_download_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/super_overlay"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="852px"
            android:src="@drawable/sd_tap_to_download"
            />
        <!-- 0 px left and 360 px from imageview imageview's top (852 + 360 = 1212 margin top)  height 216px-->
        <View
            android:id="@+id/sd_tap_to_download_clickable"
            android:layout_width="match_parent"
            android:layout_height="216px"
            android:layout_marginTop="1212px"
            android:clickable="true"
            android:background="@color/super_overlay_clickable_icon_area_bg"
            />
    </FrameLayout>
</FrameLayout>