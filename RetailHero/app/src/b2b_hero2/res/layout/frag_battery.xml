<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/video_container">

    <com.samsung.retailexperience.retailhero.view.VideoTextureView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:looped="false"
        app:autoPlay="false"
        app:isShowVideoFrame="true"
        app:scaleToVideoSize="true"/>

    <FrameLayout
        android:id="@+id/battery_ultra_power_saving_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/super_overlay"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="787px"
            android:layout_marginTop="296px"
            android:src="@drawable/battery_frame9"
            />
        <!-- 124 px left and 0 px top from imageview size 184px-->
        <View
            android:id="@+id/battery_ultra_power_saving_icon_clickable"
            android:layout_width="184px"
            android:layout_height="184px"
            android:layout_marginLeft="911px"
            android:layout_marginTop="296px"
            android:clickable="true"
            android:background="@color/super_overlay_clickable_icon_area_bg"
            />
    </FrameLayout>
</FrameLayout>