<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/video_container">

    <com.samsung.retailexperience.retailhero.view.VideoTextureView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:looped="false"
        app:autoPlay="false"
        app:isShowVideoFrame="true"
        app:scaleToVideoSize="true"/>

    <ImageView
        android:id="@+id/gear_tap_on_a_scene"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gear_tap_on_a_scene"
        android:background="@color/super_overlay"
        android:clickable="true"
        />
</FrameLayout>